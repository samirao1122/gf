
#include <iostream>

using namespace std;

int main() {
    char letter;


    cout << "Enter a letter: ";
    cin >> letter;


    int digit;
    switch (letter) {
        case 'A':
        case 'B':
        case 'C':
        case 'a':
        case 'b':
        case 'c':
            digit = 2;
            break;
        case 'D':
        case 'E':
        case 'F':
        case 'd':
        case 'e':
        case 'f':
            digit = 3;
            break;
        case 'g':
        case 'h':
        case 'i':
        case 'G':
        case 'H':
        case 'I':
            digit = 4;
        case 'j':
        case 'k':
        case 'l':
        case 'M':
        case 'N':
        case 'O':
            digit = 5;
        case 'p':
        case 'q':
        case 'r':
        case 'P':
        case 'Q':
        case 'R':
            digit = 6;
        case 's':
        case 't':
        case 'u':
        case 'S':
        case 'T':
        case 'U':
            digit = 7;
        case 'V':
        case 'W':
        case 'X':
        case 'v':
        case 'w':
        case 'x':
            digit = 8;
        case 'y':
        case 'z':
        case 'Y':
        case 'Z':
       
            digit = 9;
        default:
            if ((letter >= 'A' && letter <= 'Z') || (letter >= 'a' && letter <= 'z')) {
                cout << "Invalid input. Please enter a letter." << endl;
            } else {
                cout << "Invalid input. The character entered is not a letter." << endl;
            }

    }

    cout << "The digit corresponding to " << letter << " is: " << digit << endl;

    return 0;
}

 
