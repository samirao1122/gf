//question no 4

#include <iostream>

using namespace std;

int main() {
    char letter;


    cout << "Enter a letter: ";
    cin >> letter;


    int digit;
    switch (letter) {
        case 'A':
        case 'B':
        case 'C':
        case 'a':
        case 'b':
        case 'c':
            digit = 2;
            break;
        case 'D':
        case 'E':
        case 'F':
        case 'd':
        case 'e':
        case 'f':
            digit = 3;
            break;

        default:
            if ((letter >= 'A' && letter <= 'Z') || (letter >= 'a' && letter <= 'z')) {
                cout << "Invalid input. Please enter a letter." << endl;
            } else {
                cout << "Invalid input. The character entered is not a letter." << endl;
            }

    }

    cout << "The digit corresponding to " << letter << " is: " << digit << endl;

    return 0;
}
